<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <Button
                android:id="@+id/btnExport"
                android:visibility="gone"
                android:gravity="center"
                android:drawableRight="@drawable/expand_more"
                android:padding="2dp"
                android:layout_width="@dimen/image_size80"
                android:layout_height="@dimen/image_size30"
                android:text="Export"
                android:textSize="@dimen/image_size5"
                android:background="@drawable/export_round_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/toolbar_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/drawerOpen"
                android:layout_width="@dimen/image_size13"
                android:layout_height="@dimen/image_size13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:srcCompat="@drawable/drawerleft"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--<ImageView-->
                <!--android:id="@+id/threedot"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="18dp"-->
                <!--android:layout_marginRight="8dp"-->
                <!--app:layout_constraintRight_toRightOf="parent"-->
                <!--app:srcCompat="@drawable/settings"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintTop_toTopOf="parent" />-->

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Profile"
                android:textColor="@color/white"
                android:textSize="@dimen/image_size16"
                app:layout_constraintLeft_toRightOf="@+id/drawerOpen"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.195" />





        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>



</android.support.constraint.ConstraintLayout>