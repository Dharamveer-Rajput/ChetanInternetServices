<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/txtInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="52"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txtdate"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintVertical_bias="0.526" />

    <TextView
        android:id="@+id/txtdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01 Mar 2017"
        android:textSize="12sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.514"
        app:layout_constraintRight_toLeftOf="@+id/btnStatusBill2"
        android:layout_marginRight="19dp" />

    <TextView
        android:id="@+id/txtAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999.0"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="214dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.514"
        app:layout_constraintRight_toLeftOf="@+id/txtBal"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:background="@drawable/round_button"
        android:id="@+id/btnStatusBill2"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:text="paid"
        android:textSize="8sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.514"
        app:layout_constraintRight_toLeftOf="@+id/txtAmt"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/txtBal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.514"
        app:layout_constraintRight_toLeftOf="@+id/txtDetailsView"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/txtDetailsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textSize="12sp"
        android:textColor="@color/cardblue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.514"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>