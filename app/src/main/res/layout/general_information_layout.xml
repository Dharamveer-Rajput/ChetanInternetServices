<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Information"
        android:textSize="20sp"
        android:textColor="@color/white"
        />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            />


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="User Name:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/tvusername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Charandeep"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvName"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Charandeep SIngh"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Plan name:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvPlanName"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100GB 5MBPS"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mobile number:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvMobileNo"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8699367603"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="0.4"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvemailId"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="charandeep@live.com"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Permanent Address:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/tvAddress"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Haveli kalan Ward No.2 ;Distt ; , , Ropar"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Activation Date:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvActivationDate"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="12:00 am on March 1, 2017"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Expiration Date:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvExpirationDate"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="11:59 pm on December 31, 2999"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>