<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/image_size20"
        android:textColor="@color/white"/>
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/image_size200"
        android:layout_height="@dimen/image_size200"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/cardblue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/android_gridview_image"
                android:layout_width="@dimen/image_size70"
                android:layout_height="@dimen/image_size70"
                android:layout_marginTop="15dp" />
            <!--<TextView-->
                <!--android:id="@+id/android_gridview_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:textSize="20sp"-->
                <!--android:textColor="@color/white"/>-->
            <TextView
                android:id="@+id/android_gridview_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.02 GB"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/image_size20"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>