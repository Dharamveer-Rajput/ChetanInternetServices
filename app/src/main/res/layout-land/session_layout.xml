<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardblue"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardblue"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_layout_topleft_bottomleft"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/calender" />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="47dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="8"
                android:background="@drawable/round_layout_topright_bottomright"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:background="@drawable/round_layout_topright_bottomright"
                    android:hint="from"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_layout_topleft_bottomleft"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/calender" />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="47dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="8"
                android:background="@drawable/round_layout_topright_bottomright"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:background="@drawable/round_layout_topright_bottomright"
                    android:hint="to"
                    android:textSize="20dp" />

            </LinearLayout>

            <!--<Button-->
                <!--android:id="@+id/button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="47dp"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@drawable/round_button"-->
                <!--android:text="Filter" />-->
        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Bytes"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Bytes"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>